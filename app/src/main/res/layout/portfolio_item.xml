<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:id="@+id/portfolio_item_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="30dp"
    android:layout_margin="@dimen/margin_small"
    android:backgroundTint="@color/white">

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="@dimen/portfolio_item_height"
        android:orientation="vertical">

    <TextView
        android:id="@+id/portfolio_item_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/font_medium"
        android:layout_marginTop="@dimen/font_medium"
        />

    <ImageView
        android:id="@+id/portfolio_item_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/short_descripton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/font_medium"
        android:layout_marginBottom="@dimen/font_medium"
        android:gravity="center"
        android:textColor="@color/mountain_gray"
        android:textSize="@dimen/font_medium"
        android:textStyle="bold"
        />
    </LinearLayout>

</androidx.cardview.widget.CardView>